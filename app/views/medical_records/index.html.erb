<h1 align="center">Historias médicas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Identificación</th>
      <th>Apellido(s)</th>
      <th>Nombre(s)</th>
      <th>Teléfono</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
  <% @records.each do |record| %>
    <tr>
      <th scope="row"><%= link_to "#{record.id}", medical_record_path(record) %></th>
        <td><%= link_to "#{record.document_type}-#{record.document}", medical_record_path(record) %></td>
        <td><%= link_to "#{record.last_name}", medical_record_path(record) %></td>
        <td><%= link_to "#{record.name}", medical_record_path(record) %></td>
        <td><%= link_to "#{record.phone_number}", medical_record_path(record) %></td>
        <td>
          <a class="blue-text"><i class="fa fa-user"></i></a>
          <a class="teal-text"><i class="fa fa-pencil"></i></a>
          <a class="red-text"><i class="fa fa-times"></i></a>
        </td>
    </tr>
    <p></p>
  <% end %>
  </tbody>
</table>
<div class="center">
  <%= will_paginate @records %>
</div>
