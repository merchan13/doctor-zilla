<h1 align="center">Historias médicas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Identificación</th>
      <th>Apellido(s)</th>
      <th>Nombre(s)</th>
      <th>Teléfono</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
  <% @records.each do |record| %>
    <tr>
      <th scope="row"><%= record.id %></th>
        <td><%= "#{record.document_type}-#{record.document}" %></td>
        <td><%= record.last_name %></td>
        <td><%= record.name %></td>
        <td><%= record.phone_number %></td>
        <td>
          <%= link_to "Ver", medical_record_path(record), class: 'btn btn-info' %>
          <%= link_to "Editar", edit_medical_record_path(record), class: 'btn btn-primary' %>
        </td>
    </tr>
    <p></p>
  <% end %>
  </tbody>
</table>
<div class="center">
  <%= will_paginate @records %>
</div>
