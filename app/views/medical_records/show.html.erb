<h1><%= "Historia ##{@record.id}" %></h1>
<% if !@record.old_record_number.nil? %>
  <h4><%= "[#HV #{@record.old_record_number}]" %></h4>
<% end %>
<div class="col-md-12">
  <!-- HISTORIA -->
  <div class="col-md-9 new-panel main-panel">

    <div class="col-md-12">
      <%= link_to "Editar", edit_medical_record_path(@record), class: 'btn btn-lg btn-warning', style:'float:right' %>
    </div>

    <div class="col-md-2 col-md-offset-5">
      <% if @record.profile_picture.url.present? %>
        <%= image_tag(@record.profile_picture.url, class: 'img-responsive img-circle') %>
      <% end %>
    </div>
    <div class="col-md-4 col-md-offset-4 center">
      <h4><%= "#{@record.name} #{@record.last_name}" %></h4>
      <h5><%= @record.full_id %></h5>
      <h6><%= "Fecha de nacimiento: #{@record.birthday.strftime('%d %b %Y')} " %><strong><%= "(#{@record.age} aÃ±os)" %></strong></h6>
      <h6><%= "Primera consulta: #{@record.first_consultation_date.strftime('%d %b %Y')}" %></h6>
    </div>

    <div class="col-md-12"><hr></div>

    <!-- INFORMACION BASICA -->
    <%= render partial: 'show_basic', locals: { record: @record } %>

    <div class="col-md-12"><hr></div>

    <!-- EXAMEN BASICO Y ANTECEDENTES -->
    <%= render partial: 'show_clinic_data', locals: { record: @record } %>

    <div class="col-md-12"><hr></div>

    <!-- CONSULTAS -->
    <%= render partial: 'show_consultations', locals: { consultations: @consultations } %>

    <div class="col-md-12"><hr></div>

  </div>

  <!-- MENU LATERAL -->
  <%= render partial: 'side_menu', locals: { record: @record } %>

  <%= render 'modals' %>

</div>
