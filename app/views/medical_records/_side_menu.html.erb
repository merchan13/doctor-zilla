<div class="col-md-2 new-panel secondary-panel">
  <div class="col-md-12">
    <% if record.profile_picture.url.present? %>
      <%= image_tag(record.profile_picture.url, class: 'img-responsive img-circle') %>
    <% end %>
  </div>

  <div class="col-md-12"><hr></div>

  <div class="col-md-12">
    <p><%= record.last_name %></p>
  </div>
  <div class="col-md-12">
    <p><%= record.full_id %></p>
  </div>
  <div class="col-md-12">
    <p><%= record.age.to_s + ' años' if record.birthday.present? %></p>
  </div>

  <div class="col-md-12"><hr></div>

  <div class="col-md-12 center">
    <h4><a href="#" data-toggle="modal" data-target="#new-attachment-form">Anexos </a>(<%= record.attachments.count %>)</h4>
    <hr>
    <h4><a href="#" data-toggle="modal" data-target="#"> Crear Nota<br>Operatoria </a></h4>
    <hr>
    <h4><%= link_to "Informes ", reports_path(record: record) %>(<%= record.reports.count %>)</h4>
    <hr>
    <h4><a href="#" data-toggle="modal" data-target="#">Récipe </a>(<%= record.prescriptions.count %>)</h4>
    <!--
    <hr>
    <h4><a href="#" data-toggle="modal" data-target="#">Exámenes de<br>Laboratorio </a></h4>
    -->
    <br>
  </div>
</div>
