<div class="col-md-2 new-panel secondary-panel">
  <div class="col-md-12">
    <% if record.profile_picture.url.present? %>
      <%= image_tag(record.profile_picture.url, class: 'img-responsive img-circle') %>
    <% end %>
  </div>

  <div class="col-md-12"><hr></div>

  <div class="col-md-12">
    <p><%= record.last_name %></p>
  </div>
  <div class="col-md-12">
    <p><%= record.full_id %></p>
  </div>
  <div class="col-md-12">
    <p><%= record.age.to_s + ' años' if record.birthday.present? %></p>
  </div>

  <div class="col-md-12"><hr></div>

  <div class="col-md-12 center">
    <h4><a href="#" data-toggle="modal" data-target="#new-attachment-form">Anexos </a>(<%= record.attachments.count %>)</h4>
    <hr>
    <h4><a href="#" data-toggle="modal" data-target="#new-attachment-form">Nota<br>Operatoria </a></h4>
    <hr>
    <h4><a href="#" data-toggle="modal" data-target="#new-attachment-form">Informe </a></h4>
    <hr>
    <h4><a href="#" data-toggle="modal" data-target="#new-attachment-form">Récipe </a></h4>
    <hr>
    <h4><a href="#" data-toggle="modal" data-target="#new-attachment-form">Exámenes de<br>Laboratorio </a></h4>
  </div>
</div>
