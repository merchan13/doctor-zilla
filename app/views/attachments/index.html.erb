<div class="col-md-12">
  <h1><%= "Historia ##{@record.id}" %></h1>

  <div class="col-md-9 new-panel main-panel">

    <h3 align="center">Anexos</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Fecha de creación</th>
          <th>Descripción</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @attachments.each do |attachment| %>
        <tr>
            <th scope="row" class="col-md-1"><%= attachment.id %></th>
            <td class="col-md-2"><%= "#{attachment.created_at.strftime("%d-%b-%Y")}" %></td>
            <td class="col-md-7"><%= attachment.description %></td>
            <td class="col-md-2">
              <!-- Temporal -->
              <a href="<%= attachment.url%>" target="_blank", class="btn btn-info">Ver</a>
              <%#= link_to "Ver", attachment_path(attachment), class: 'btn btn-info' %>
              <%= link_to "Borrar", attachment, class: 'btn btn-danger', method: :delete, data: { confirm: "¿Está seguro de que quiere eliminar el anexo? La siguiente acción no puede deshacerse." } %>
            </td>
        </tr>
        <p></p>
      <% end %>
      </tbody>
    </table>

    <div class="center">
      <%= will_paginate @attachments %>
    </div>

    <div class="col-md-4 col-md-offset-5">
      <%= link_to "Nuevo anexo", new_attachment_path(record: @record), class: 'btn btn-success modal-link' %>
    </div>

    <div class="col-md-12"><hr></div>

  </div>

  <!-- MENU LATERAL -->
  <%= render partial: 'medical_records/side_menu', locals: { record: @record } %>
</div>
