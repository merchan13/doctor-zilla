<div class="col-md-12">
  <h1><%= "Historia ##{@record.id}" %></h1>

  <div class="col-md-9 new-panel main-panel">

    <h3 align="center">Informes Médicos</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Fecha de creación</th>
          <th>Preview</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @reports.each do |report| %>
        <tr>
            <th scope="row" class="col-md-1"><%= report.id %></th>
            <td class="col-md-2"><%= "#{report.created_at.strftime("%d-%b-%Y")}" %></td>
            <td class="col-md-7"><%= report.description.truncate(150) %></td>
            <td class="col-md-2"><%= link_to "Ver", report_path(report), class: 'btn btn-info' %></td>
        </tr>
        <p></p>
      <% end %>
      </tbody>
    </table>

    <div class="center">
      <%= will_paginate @reports %>
    </div>

    <div class="col-md-4 col-md-offset-5">
      <%= link_to "Nuevo informe", select_data_path(record: @record), class: 'btn btn-success modal-link' %>
    </div>

    <div class="col-md-12"><hr></div>

  </div>

  <!-- MENU LATERAL -->
  <%= render partial: 'medical_records/side_menu', locals: { record: @record } %>
</div>
