<%= render 'shared/errors', obj: @prescription %>
<div class="col-md-9 new-panel main-panel">

  <h3 align="center"><strong>Nuevo Récipe</strong></h3>

  <div class="col-md-12"><hr></div>

  <%= form_for(@prescription, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

    <input type="hidden" name="record" value="<%= @record.id %>">

    <div class="form-group col-md-12">
      <h4><i>Medicamento</i></h4>
      <div class="col-md-8">
        <%= select_tag "prescription[medicine_id][]", options_from_collection_for_select(Medicine.all, :id, :generic_name), include_blank: '-Seleccione una opción-', class: 'form-control' %>
      </div>
      <div class="col-md-12">
        <a href="#" data-toggle="modal" data-target="#new-medicine-form">Agrear nuevo medicamento</a>
      </div>
    </div>

    <!-- DOSIS -->
    <div class="form-group col-md-12">
      <h4><i>Dósis</i></h4>
      <div class="col-md-3">
        <small>Vía de administración</small>
        <select class="form-control" name="prescription[dose_way][]" id="">
          <option value="">- Seleccione una opción -</option>
          <option value="Tabletas">Topico</option>
          <option value="Tabletas">Oral</option>
          <option value="Tabletas">Subcutaneo</option>
          <option value="Tabletas">Intramuscular</option>
          <option value="Tabletas">Intravenoso</option>
          <option value="Tabletas">Rectal</option>
          <option value="Tabletas">Sublingual</option>
        </select>
      </div>
      <div class="col-md-3">
        <small>Presentación</small>
        <select class="form-control" name="prescription[dose_way][]" id="">
          <option value="">-Seleccione una opción-</option>
          <option value="Tabletas">Tabletas</option>
          <option value="Tabletas">Comprimidos</option>
          <option value="Tabletas">Grajeas</option>
          <option value="Tabletas">Capsula</option>
          <option value="Tabletas">Sobre</option>
          <option value="Tabletas">Ampollas</option>
          <option value="Tabletas">Vial</option>
          <option value="Tabletas">Gotas</option>
          <option value="Tabletas">Ungüento</option>
          <option value="Tabletas">Supositorio</option>
          <option value="Tabletas">Jarabe</option>
          <option value="Tabletas">Parche</option>
        </select>
      </div>
      <div class="col-md-2">
        <small>Cantidad</small>
        <input type="number" name="prescription[dose_quantity][]" value="" placeholder="" class="form-control">
      </div>
      <div class="col-md-2">
        <small>Unidades</small>
        <select class="form-control" name="prescription[dose_unit][]" id="">
          <option value="">-Seleccione una opción-</option>
          <option value="cc">cc</option>
          <option value="mgr">mgr</option>
          <option value="micro_gramo">μgr</option>
          <option value="gr">gr</option>
          <option value="lt">lt</option>
        </select>
      </div>
    </div>

    <!-- INTERVALO -->
    <div class="form-group col-md-4">
      <h4><i>Intérvalo</i></h4>
      <div class="col-md-5">
        <small>Cantidad</small>
        <input type="number" name="prescription[interval_quantity][]" value="" class="form-control">
      </div>
      <div class="col-md-5">
        <small>Unidades</small>
        <select class="form-control" name="prescription[interval_unit][]" id="">
          <option value="">-Seleccione una opción-</option>
          <option value="Horas">Horas</option>
          <option value="Veces">Veces</option>
        </select>
      </div>
    </div>

    <!-- DURACION -->
    <div class="form-group col-md-4">
      <h4><i>Duración</i></h4>
      <div class="col-md-5">
        <small>Cantidad</small>
        <input type="number" name="prescription[duration_quantity][]" value="" class="form-control">
      </div>
      <div class="col-md-6">
        <small>Unidades</small>
        <select class="form-control" name="prescription[duration_unit][]" id="">
          <option value="">-Seleccione una opción-</option>
          <option value="Días">Días</option>
          <option value="Semanas">Semanas</option>
          <option value="Meses">Meses</option>
        </select>
      </div>
    </div>

    <!-- OBSERVACION -->
    <div class="form-group col-md-5">
      <h4><i>Observación</i></h4>
      <br>
      <textarea name="prescription[note][]" rows="3" class="form-control"></textarea>
    </div>

    <div class="medicines_wrap">
      <!-- inputs -->
    </div>

    <div class='form-group center'>
      <div class='col-md-4 col-md-offset-4 '>
        <button type="button" name="button" class="btn btn-info">Agregar medicamento<br>al récipe</button>
      </div>
    </div>

    <div class="col-md-12"><hr></div>

    <div class='form-group center'>
      <div class='col-md-1 col-md-offset-7 '>
        <button type="button" name="button" class="btn btn-lg btn-warning">Imprimir</button>
      </div>
      <div class='col-md-4'>
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-2 new-panel secondary-panel">
  <p>Perfil paciente</p>
</div>

<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to 'Cancel request an return to records listing', medical_records_path  %> ]
</div>

<!-- EXAMEN FÍSICO -->
<%= render 'modals'%>
