<div class="col-md-12">
  <h1><%= "Historia ##{@record.id}" %></h1>
  <!-- INFORME -->
  <div class="col-md-9 new-panel main-panel">

    <div class="col-md-12">
      <h2>Récipe médico [ <%= @prescription.created_at.strftime("%d-%b-%Y") %> ]</h2>
    </div>

    <div class="col-md-12">
      <h3>Prescripción</h3>
      <p><%= @prescription.prescriptions_list.html_safe %></p>
    </div>

    <div class="col-md-12">
      <h3>Indicación para el paciente</h3>
      <p><%= @prescription.indications_list.html_safe %></p>
    </div>

    <div class="col-md-4 col-md-offset-5">
      <%= link_to "Descargar .docx", download_prescription_path(@prescription), class: 'btn btn-lg btn-primary' %>
    </div>

    <div class="col-md-12"><hr></div>

  </div>

  <!-- MENU LATERAL -->
  <%= render partial: 'medical_records/side_menu', locals: { record: @record } %>

</div>
