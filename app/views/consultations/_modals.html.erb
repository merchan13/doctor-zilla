<!-- REASON MODAL -->
<div class="modal fade" id="new-reason-modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Agregar Nuevo Motivo de Consulta</h4>
      </div>
      <div class="modal-body">
        <%= form_tag ('/reasons'), remote: true, id: 'new-reason-form' do %>
          <div id="reason-taken"></div>
          <div class="form-group row col-md-12" style="float:none">
            <div class="col-md-6">
              <h4>Descripción del motivo de consulta</h4>
              <%= text_field_tag "reason[description]",
                  nil,
                  placeholder: "Breve descripción del motivo de consulta",
                  autofocus: true, class: 'form-control',
                  pattern: TEXT_FIELD_REGEX,
                  onchange: 'javascript:validateTextField(this)',
                  required: true %>
            </div>
          </div>
          <div class="form-group row col-md-12" style="float:none">
            <div class="col-md-6">
              <%= button_tag(type: :submit, class: "btn btn-primary") do %>
                Guardar
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

