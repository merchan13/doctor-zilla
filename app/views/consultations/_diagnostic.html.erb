<div class="form-group col-md-12">
  <div class="col-md-12">
    <%= f.label :Diagnóstico, class: 'form-control-label' %>
    <%= f.select :diagnostic_id, options_from_collection_for_select(Diagnostic.all, :id, :description), {include_blank: 'N/A'}, class: 'form-control' %>
    <a href="#" data-toggle="modal" data-target="#add-diagnostic">Agregar nuevo</a>
  </div>
</div>

<div class="modal fade" id="add-diagnostic" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Agregar Nuevo Diagnóstico</h4>
      </div>
      <div class="modal-body">
        <%= f.label :Diagnóstico, class: 'form-control-label' %>
        <%= f.text_field :diagnostic_id, value: nil, class: 'form-control' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
