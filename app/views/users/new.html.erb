<%= render 'shared/errors', obj: @user %>

<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4 class="center">Nuevo Asistente</h4>
  </div>
  <div class="panel-body">
    <%= form_for(@user, url: users_admin_index_path, html: { role: 'form' }) do |f| %>

      <%= f.hidden_field :role, value: 'lospollitosdicen' %>

      <!-- FOTO -->
      <div class="form-group col-md-8 col-md-offset-2">
        <div class="col-md-4 col-md-offset-4">
          <%= f.label :avatar do %>
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
          <% end %>
        </div>
      </div>

      <!-- IDENTIFICACIÓN -->
      <div class="form-group col-md-12">
        <div class="col-md-4 col-md-offset-2">
          <%= f.label :identificación %>
          <%= f.text_field :document, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <!-- NOMBRES -->
      <div class="form-group col-md-12">
        <div class="col-md-4 col-md-offset-2">
          <%= f.label :nombres %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="col-md-4">
          <%= f.label :apellidos %>
          <%= f.text_field :lastname, class: 'form-control' %>
        </div>
      </div>

      <!-- EMAIL -->
      <div class="form-group col-md-12">
        <div class="col-md-4 col-md-offset-2">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="col-md-4">
          <%= f.label :teléfono %>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-12"><hr></div>

      <!-- NUEVA CONTRASEÑA -->
      <div class="form-group col-md-12">
        <div class="col-md-4 col-md-offset-2">
          <%= f.label :contraseña %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
        <div class="col-md-4">
          <%= f.label :confirmación_de_contraseña %>
          <%= f.password_field :password_confirmation, class: 'form-control'  %>
        </div>
      </div>

      <div class="col-md-12"><hr></div>

      <div class="col-md-4 col-md-offset-4 text-center">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>

    <% end %>
  </div>
</div>

<%= link_to t('.back', default: 'Back'), :back %>
