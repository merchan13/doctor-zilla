<!-- PROCEDURE MODAL-->
<div class="modal fade" id="new-procedure-form" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Agregar Nuevo Procedimiento</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@procedure, remote: true) do |p| %>
          <%= p.label :Procedimiento, class: 'form-control-label' %>
          <%= p.text_field :name, value: nil, class: 'form-control' %>
          <%= p.text_area :description, rows: '2', value: nil, class: 'form-control' %>
          <%= p.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
